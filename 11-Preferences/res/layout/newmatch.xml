<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_centerVertical="true"
              android:layout_centerHorizontal="true"
              android:background="#baafaa"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content">
    <TextView android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:textColor="#000"
              android:padding="5dp"
              android:textStyle="bold"
              android:text="Change the names of the teams as you wish."></TextView>
    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:gravity="center_horizontal"
                  android:orientation="vertical"
                  android:background="#0945aa"
                  android:padding="10dp">
        <EditText android:id="@+id/home"
                  android:layout_height="wrap_content"
                  android:layout_width="250dp"
                  android:textColor="#000"
                  android:hint="Home name"
                  android:text="Home"></EditText>
        <EditText android:id="@+id/visitors"
                  android:layout_height="wrap_content"
                  android:layout_width="250dp"
                  android:hint="Visitors name"
                  android:text="Visitors"></EditText>
        <Button android:id="@+id/ok"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Save"></Button>
    </LinearLayout>
</LinearLayout> 
