<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/gradients">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:src="@drawable/droid"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="demo::DIALOG"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textColor="@color/colorFeedHunter"
            android:textSize="30dp"/>
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/labelYesNoButton"
        android:id="@+id/buttonYesNo"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="30dp"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/labelPickerButton"
        android:id="@+id/buttonPicker"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="30dp"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/labelDialogButton"
        android:id="@+id/buttonDialog"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="30dp"/>
</LinearLayout>

